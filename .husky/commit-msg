#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
commit_msg=$(cat "$1")

# Check if commit message follows conventional commit format
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?(:|!:) .{1,}$" && ! echo "$commit_msg" | grep -qE "^(ğŸ¨|â™»ï¸|âœ¨|ğŸ›|ğŸ“|ğŸš€|âš¡|ğŸ§ª|ğŸ”§|ğŸ‘·|ğŸ”–|âª)"; then
  echo "âŒ Invalid commit message format!"
  echo ""
  echo "Commit message should follow one of these formats:"
  echo "  - Conventional: type(scope): description"
  echo "  - Emoji: ğŸ¨ description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo "Example: feat(auth): add login functionality"
  echo "Example: ğŸ¨ Update UI components"
  exit 1
fi

